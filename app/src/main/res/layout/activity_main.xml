<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#161616">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/CodGray"
            android:id="@+id/arrowbtn"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/arrowbtn"
            android:textStyle="bold"
            android:layout_marginTop="21dp"
            android:textSize="20sp"
            android:id="@+id/profiletxt"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img"
            android:layout_toRightOf="@id/profiletxt"
            android:layout_marginLeft="120dp"
            android:backgroundTint="@color/black"
            />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/arrowbtn"
            android:src="@drawable/profilepic"
            android:scaleType="centerCrop"
            android:background="@drawable/oval_background"
            android:clipToOutline="true"
            android:outlineProvider="background"
            />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abhik Goswami"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/profileImage"
            android:layout_below="@id/profiletxt"/>

        <!-- Member Since -->
        <TextView
            android:id="@+id/memberSince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="member since Dec, 2020"
            android:textColor="#757575"
            android:textSize="18sp"
            android:layout_toRightOf="@id/profileImage"
            android:layout_below="@id/userName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage"
            android:id="@+id/credgarage"
            android:src="@drawable/img_1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/credgarage"
            android:text="credit score"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="38dp"
            android:textSize="15sp"
            android:id="@+id/credscore"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/credgarage"
            android:layout_toRightOf="@id/credscore"
            android:text="REFRESH AVAILABLE"
            android:textColor="#259f61"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:id="@+id/refreshtxt"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/credgarage"
            android:layout_toRightOf="@id/refreshtxt"
            android:text="757"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="35dp"
            android:textSize="15sp"
            android:id="@+id/credscorenum"
            />

        <ImageButton
            android:id="@+id/arrowrightbtn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/credgarage"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@id/credscore"
            android:backgroundTint="@color/CodGray"
            android:src="@drawable/right_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/credscore"
            android:text="lifetime cashback"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="38dp"
            android:textSize="15sp"
            android:id="@+id/cashbacktxt"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/credscorenum"
            android:layout_toRightOf="@id/cashbacktxt"
            android:text="3"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="160dp"
            android:textSize="15sp"
            android:id="@+id/cashbackpts"
            />

        <ImageButton
            android:id="@+id/arrowrightbtn2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/arrowrightbtn"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cashbackpts"
            android:backgroundTint="@color/CodGray"
            android:src="@drawable/right_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cashbacktxt"
            android:text="bank balance"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="38dp"
            android:textSize="15sp"
            android:id="@+id/bankbaltxt"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cashbackpts"
            android:layout_toRightOf="@id/bankbaltxt"
            android:text="check"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="170dp"
            android:textSize="15sp"
            android:id="@+id/checktxt"
            />

        <ImageButton
            android:id="@+id/arrowrightbtn3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/arrowrightbtn2"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/checktxt"
            android:backgroundTint="@color/CodGray"
            android:src="@drawable/right_arrow" />

        <RelativeLayout
            android:layout_width="1000dp"
            android:layout_height="1000dp"
            android:layout_below="@id/bankbaltxt"
            android:layout_marginTop="20dp"
            android:background="@color/black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOUR REWARDS &amp; BENEFITS"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/rewardtxt"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rewardtxt"
                android:text="cashback balance"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/cashbackbaltxt"
                />

            <TextView
                android:layout_width="26dp"
                android:layout_height="25dp"
                android:text="0"
                android:textStyle="bold"
                android:id="@+id/zeronum"
                android:layout_below="@id/cashbackbaltxt"
                android:layout_marginLeft="35dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/zeronum"
                android:text="coins"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/coins"
                />

            <TextView
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:text="26,46,583"
                android:textStyle="bold"
                android:layout_below="@id/coins"
                android:layout_marginLeft="35dp"
                android:id="@+id/coinsnum"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coinsnum"
                android:text="win upto Rs 1000"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/winuptotxt"
                />

            <TextView
                android:layout_width="155dp"
                android:layout_height="25dp"
                android:text="refer and earn"
                android:textStyle="bold"
                android:layout_below="@id/winuptotxt"
                android:layout_marginLeft="35dp"
                android:id="@+id/refertxt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRANSACTIONS &amp; SUPPORT"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="35dp"
                android:layout_below="@id/refertxt"
                android:id="@+id/transactiontxt"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transactiontxt"
                android:text="all transactions"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/alltransactiontxt"
                />


        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>